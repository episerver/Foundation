    <SortOrder>2</SortOrder>
  </PaymentMethod>
  <PaymentMethod>
    <Name>Budget Payment</Name>
    <SystemKeyword>BudgetPayment</SystemKeyword>
    <Description>Budget Payment</Description>
    <PaymentClass>Mediachase.Commerce.Orders.OtherPayment, Mediachase.Commerce</PaymentClass>
    <GatewayClass>Foundation.Features.Checkout.Payments.BudgetPaymentGateway, Foundation</GatewayClass>
    <IsDefault>false</IsDefault>
    <SortOrder>3</SortOrder>
  </PaymentMethod>
  <PaymentMethod>
    <Name>Gift Card</Name>
    <SystemKeyword>GiftCardPayment</SystemKeyword>
    <Description>Gift card payment</Description>
    <PaymentClass>Mediachase.Commerce.Orders.GiftCardPayment, Mediachase.Commerce</PaymentClass>
