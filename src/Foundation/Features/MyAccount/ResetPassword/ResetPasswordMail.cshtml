@using Foundation.Features.MyAccount.ResetPassword

@model ResetPasswordMailViewModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-12">
        <h2>@Html.PropertyFor(x => x.CurrentContent.Subject)</h2>
    </div>
</div>
<div class="row">
    @if ((Model.CurrentContent.MainBody != null && !Model.CurrentContent.MainBody.IsEmpty) || PageEditing.PageIsInEditMode)
    {
        <div class="col-12">
            @Html.PropertyFor(m => m.CurrentContent.MainBody)
        </div>
    }
</div>
