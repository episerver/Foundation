@model Foundation.Commerce.ViewModels.AssetsDownloadLinksBlockViewModel

<div class="row" @Html.EditAttributes(x => x.CurrentBlock.RootContent)>
    <div class="col-12">
        @if (Model.Assets != null)
        {
            foreach (var a in Model.Assets)
            {
                <h5>
                    <a href="/AssetsDownloadLinksBlock/Download?contentLinkId=@a.ContentLink.ID" class="download-file">
                        <i data-feather="download"></i>
                        @a.Name
                    </a>
                </h5>
            }
        }
    </div>
</div>