@using Foundation.Cms

@model IContentViewModel<IContent>

@{
    Layout = "~/Features/Shared/Foundation/_MasterLayout.cshtml";
}

@section AdditionalStyles {
    @RenderSection("AdditionalStyles", required: false)
}

@if (Model.CurrentContent is CatalogContentBase)
{
    @section Meta {
        @RenderSection("Meta", required: false)
    }
}

<div class="loading-box" style="display: none">
    <div class="loader"></div>
</div>

@Html.RenderEPiServerQuickNavigator()

@{
    var foundationPageData = Model.CurrentContent as IFoundationContent;
}

@if (!foundationPageData?.HideSiteHeader ?? false)
{
    { Html.RenderAction("GetHeader", "Header", new { homePage = Model.StartPage }); }
}

<div class="container">
    @RenderBody()
</div>

@if (!foundationPageData?.HideSiteFooter ?? false)
{
    @Html.Partial("_Footer", Model)
}

@Html.Partial("_QuickViewModal")

<script src="~/Assets/js/vendors/jquery/jquery-3.4.0.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/jquery/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/jquery/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/jquery/jquery.zoom.js"></script>
<script src="~/Assets/js/vendors/jquery/jquery.easy-autocomplete.min.js"></script>
<script src="~/Assets/js/vendors/popper/popper.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/bootstrap-4.3.1/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/mvc-grid/mvc-grid.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/feather-icons/feather.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/axios/axios.min.js" type="text/javascript"></script>
<script src="~/Assets/js/vendors/pdfobject/PdfObject.js"></script>
<script src="~/Assets/js/main.min.js"></script>

@RenderSection("AdditionalScripts", required: false)
@Html.RequiredClientResources("Footer")