@using EPiServer.Web;
@using EPiServer.Web.Routing;
@using Foundation.Features.Header

@model HeaderLogoViewModel

<div class="header">
    <div class="container @(Model.LargeHeaderMenu ? "large-header-menu" : "")">
        <div class="header__logo @(Model.HeaderMenuStyle == "LeftLogo" ? "flex-start" : "flex-center")"
             style="@(Model.HeaderMenuStyle == "LeftLogo" ? "order: -1; width: auto;" : "")">
            <a href="/">
                @if (PageEditing.PageIsInEditMode)
                {
                    <img class="img-fluid" src="@UrlResolver.Current.GetUrl(Model.SiteLogo, null, new VirtualPathArguments() { ContextMode = ContextMode.Default })"
                         @Html.EditAttributes(x => x.SiteLogo) />
                }
                else
                {
                    <picture class="img-fluid">
                        <source data-srcset="@Url.ContentUrl(Model.SiteLogo)?format=webp" type="image/webp">
                        <img data-src="@Url.ContentUrl(Model.SiteLogo)" class="img-fluid lazyload" @Html.EditAttributes(x => x.SiteLogo) />
                    </picture>
                }
            </a>
        </div>
    </div>
</div>