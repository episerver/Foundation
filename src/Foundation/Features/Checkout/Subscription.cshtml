@using System.Collections.Generic

@model CheckoutViewModel

<div class="row">
    <div class="col-12">
        <h4 class="title">@Html.TranslateFallback("/Shared/Subscription", "Subscription")</h4>
    </div>
    <div class="col-12 checkout--panel-block">
        <label class="checkbox">
            @Html.CheckBoxFor(x => x.IsUsePaymentPlan)
            <span class="title">@Html.TranslateFallback("/Shared/CreateSubscription", "Create subscription of cart")</span>
            <span class="checkmark"></span>
        </label>
    </div>
    <div class="col-6">
        @Html.Label("Every ")
        @Html.TextBoxFor(x => x.PaymentPlanSetting.CycleLength, new { @class = "textbox", type = "number", style = "width: 150px" })
        <span> day(s)</span>
    </div>

    <div class="col-6">
        <span>End date</span>
        @Html.TextBoxFor(x => x.PaymentPlanSetting.EndDate, new { type = "date", style = "display: inline; width: auto; border-radius: 0; padding: 8px; border: 1px solid #ddd" })
    </div>
</div>